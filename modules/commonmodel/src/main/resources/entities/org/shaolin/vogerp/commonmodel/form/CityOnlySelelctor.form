      import java.util.ArrayList;
      import org.shaolin.bmdp.runtime.AppContext;
      import org.shaolin.bmdp.runtime.ce.CEUtil;
      import org.shaolin.vogerp.commonmodel.util.CEOperationUtil;
      import org.shaolin.bmdp.runtime.spi.IServerServiceManager;
      import org.shaolin.bmdp.runtime.spi.IConstantService;
      import org.shaolin.bmdp.runtime.security.UserContext;
      {
          if ($selectedCity == null) {
              $selectedCity = UserContext.getUserContext().getCity();
          }
          if ($selectedCity == null) {
              $selectedCity = "CityBJ0,110100";//bejing.
          }
          
          ArrayList values = new ArrayList();
          ArrayList displayItems = new ArrayList();
          CEOperationUtil.getCEItems(2, values, displayItems, AppContext.get().getConstantService().getConstantEntity("CityList"));
          $values = values;
          $displayItems = displayItems;
         
          @odContext.executeAllMappings();
      }   
    ]]></expressionString>
    </ns2:DataToUIMappingOperation>
