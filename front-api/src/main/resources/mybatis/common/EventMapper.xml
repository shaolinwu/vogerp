<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bootdo.event.dao.EventDao">

    <select id="get" resultType="com.bootdo.event.domain.EventDO">
        select `id`,`userid`,`eventtype`,`msg`,`state`,`retry`,`createdate`,`execount`,`updatedate`,`updatemsg` from sys_event where id = #{value}
    </select>

    <select id="list" resultType="com.bootdo.event.domain.EventDO">
        select `id`,`userid`,`eventtype`,`msg`,`state`,`retry`,`createdate`,`execount`,`updatedate`,`updatemsg` from sys_event
        <where>  
                  <if test="id != null and id != ''"> and id = #{id} </if>
                  <if test="userid != null and userid != ''"> and userid = #{userId} </if>
                  <if test="eventtype != null and eventtype != ''"> and eventtype = #{eventtype} </if>
                  <if test="msg != null and msg != ''"> and msg = #{msg} </if>
                  <if test="state != null"> and state = #{state} </if>
                  <if test="retry != null and retry != ''"> and retry = #{retry} </if>
                  <if test="createdate != null and createdate != ''"> and createdate = #{createdate} </if>
                  <if test="execount != null and execount != ''"> and execount = #{execount} </if>
                  <if test="updatedate != null and updatedate != ''"> and updatedate = #{updatedate} </if>
                  <if test="updatemsg != null and updatemsg != ''"> and updatemsg = #{updatemsg} </if>
                </where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>
    
    <select id="count" resultType="int">
        select count(*) from sys_event
         <where>  
                  <if test="id != null and id != ''"> and id = #{id} </if>
                  <if test="userid != null and userid != ''"> and userid = #{userId} </if>
                  <if test="eventtype != null and eventtype != ''"> and eventtype = #{eventtype} </if>
                  <if test="msg != null and msg != ''"> and msg = #{msg} </if>
                  <if test="state != null"> and state = #{state} </if>
                  <if test="retry != null and retry != ''"> and retry = #{retry} </if>
                  <if test="createdate != null and createdate != ''"> and createdate = #{createdate} </if>
                  <if test="execount != null and execount != ''"> and execount = #{execount} </if>
                  <if test="updatedate != null and updatedate != ''"> and updatedate = #{updatedate} </if>
                  <if test="updatemsg != null and updatemsg != ''"> and updatemsg = #{updatemsg} </if>
                </where>
    </select>
     
    <insert id="save" parameterType="com.bootdo.event.domain.EventDO">
        insert into sys_event
        (
            `id`, 
            `userid`,
            `eventtype`, 
            `msg`, 
            `state`, 
            `retry`, 
            `createdate`, 
            `execount`, 
            `updatedate`, 
            `updatemsg`
        )
        values
        (
            #{id}, 
            #{userId}, 
            #{eventtype}, 
            #{msg}, 
            #{state}, 
            #{retry}, 
            #{createdate}, 
            #{execount}, 
            #{updatedate}, 
            #{updatemsg}
        )
    </insert>
     
    <update id="update" parameterType="com.bootdo.event.domain.EventDO">
        update sys_event 
        <set>
            <if test="state != null">`state` = #{newstate}, </if>
            <if test="execount != null">`execount` = #{execount}, </if>
            <if test="updatedate != null">`updatedate` = #{updatedate}, </if>
            <if test="updatemsg != null">`updatemsg` = #{updatemsg}</if>
        </set>
        where id = #{id}
    </update>
    
    <update id="updateState" parameterType="com.bootdo.event.domain.EventDO">
        update sys_event 
        <set>
            <if test="state != null">`state` = #{newstate}, </if>
            <if test="execount != null">`execount` = #{execount}, </if>
            <if test="updatedate != null">`updatedate` = #{updatedate}, </if>
            <if test="updatemsg != null">`updatemsg` = #{updatemsg}</if>
        </set>
        where id = #{id} and state = #{state}
    </update>

</mapper>