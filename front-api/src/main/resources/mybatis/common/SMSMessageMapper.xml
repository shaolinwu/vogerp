<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bootdo.common.dao.SMSMessageMapper">

	<select id="get" resultType="com.bootdo.common.domain.SMSMessageDO">
		select `id`,`type`,`mobile`,`code`,`createDate` from sys_sms where id = #{value}
	</select>

	<select id="list" resultType="com.bootdo.common.domain.SMSMessageDO">
		select `id`,`type`,`mobile`,`code`,`createDate` from sys_sms
        <where>  
          <if test="type != null and type != ''"> and type = #{type} </if>
          <if test="mobile != null and mobile != ''"> and mobile = #{mobile} </if>
          <if test="createdate != null and createdate != ''"> and createDate = #{createdate} </if>
        </where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
            <otherwise>
                order by createdate desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from sys_sms
         <where>  
                  <if test="id != null and id != ''"> and id = #{id} </if>
                  <if test="type != null and type != ''"> and type = #{type} </if>
                  <if test="mobile != null and mobile != ''"> and mobile = #{mobile} </if>
                  <if test="code != null and code != ''"> and code = #{code} </if>
                  <if test="createdate != null and createdate != ''"> and createDate = #{createdate} </if>
                </where>
	</select>
	 
	<insert id="save" parameterType="com.bootdo.common.domain.SMSMessageDO" useGeneratedKeys="true" keyProperty="id">
		insert into sys_sms
        (
            `id`, 
            `type`, 
            `mobile`, 
            `code`, 
            `createDate`
        )
        values
        (
            #{id}, 
            #{type}, 
            #{mobile}, 
            #{code}, 
            #{createDate}
        )
	</insert>

</mapper>